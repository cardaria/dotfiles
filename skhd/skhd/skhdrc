# change window focus within space
alt - n : yabai -m window --focus south
alt - m : yabai -m window --focus north
alt - t : yabai -m window --focus west
alt - s : yabai -m window --focus east

# swap windows
shift + alt - n : yabai -m window --swap south
shift + alt - m : yabai -m window --swap north
shift + alt - t : yabai -m window --swap west
shift + alt - s : yabai -m window --swap east

# move window and split
ctrl + alt - n : yabai -m window --warp south
ctrl + alt - m : yabai -m window --warp north
ctrl + alt - t : yabai -m window --warp west
ctrl + alt - s : yabai -m window --warp east

# rotate layout clockwise
shift + alt - l : yabai -m space --rotate 270

# maximize a window
alt - f : /Users/cardaria/dotfiles/yabai/yabai/scripts/toggle_fullscreen.sh


# focus different spaces
alt - r : yabai -m space --focus 1
alt - a : yabai -m space --focus 2
alt - e : yabai -m space --focus 3
alt - i : yabai -m space --focus 4

# balance windows
alt - b : yabai -m space --balance

# move window to space x and switch to space x (works with both SIP enabled and disabled)
alt - p : yabai -m window --space 1 --focus
alt - 0x2B : yabai -m window --space 2 --focus
alt - 0x2F : yabai -m window --space 3 --focus
alt - 0x2C : yabai -m window --space 4 --focus

# toggle splitting
alt - d : yabai -m window --toggle split

